@using System.Collections.Generic 
@using Microsoft.AspNetCore.Http 
@using Microsoft.AspNetCore.Http.Authentication 
@model LoginViewModel 
@inject SignInManager <ApplicationUser> SignInManager 
@{ ViewData["Title"] = "Log in"; }


    <div class="row">
  


        <div class="loginmodal-container log" ng-cloak>
            <h1>{{'LoginToBWG'|translate}}</h1>
            <h3 class="alertFont"> @Html.ValidationMessage("LoginError") </h3>
            <form name="form" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData[" ReturnUrl "]" method="post">
                <div class="control-group" ng-class="{true: 'error'}[form.email.$error.email || (submitted && form.email.$error.required) || (submitted && form.password.$error.required)  ]">
                    <div class="controls">
                       
                        <span class="help-inline alertFont" ng-show="submitted && form.email.$error.required">{{'EMAIL_REQUIRED'|translate}}</span>
                        <span class="help-inline alertFont" ng-show="form.email.$error.email">{{'EMAIL_INVALID'|translate}}</span>
                        <input type="email" name="email" ng-model="email" asp-for="Email" placeholder="{{'EMAIL' | translate}}" required />
                        
                        <span class="help-inline alertFont"  ng-show="submitted && form.password.$error.required">{{'PASSWORD_REQUIRED'|translate}}</span>
                        <input type="password" asp-for="Password" ng-model="password" name="password" placeholder="{{'PASSWORD' | translate}}" required/>
                    </div>
                </div>

                <input type="submit" name="login" class="login loginmodal-submit" ng-click="submitted=true" value="{{'LOG IN'| translate}}">
                <a href="#" class="myfont">{{'FORGOT_PASSWORD'|translate}}</a>
            </form>
        </div>

