@model RegisterContragentViewModel 
@{ ViewData["Title"] = "Register"; }

<script src='https://www.google.com/recaptcha/api.js'></script>



<div class="loginmodal-container reg" ng-cloak>
    <h1>{{'REGISTER'| translate}}</h1>
    <!-- <h3 class="alertFont"> @Html.ValidationMessage("LoginError") </h3> -->


    <form asp-controller="Account" asp-action="RegisterContragent" asp-route-returnurl="@ViewData[" ReturnUrl "]" method="post">
<div asp-validation-summary="All" class="text-danger"></div>
        <span asp-validation-for="CompanyName" class="text-danger"></span>
        <input type="text" asp-for="CompanyName" placeholder="{{'LAW_NAME'|translate}}" />

        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" asp-for="Name"  placeholder="{{'CP_NAME'|translate}}" />

        <span asp-validation-for="Email" class="text-danger"></span>
        <input type="text" asp-for="Email"  placeholder="{{'EMAIL'|translate}}" />

        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" placeholder="{{'PASSWORD'|translate}}" />

        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <input asp-for="ConfirmPassword" placeholder="{{'CONF_PASSWORD'|translate}}" />


        <input type="checkbox" asp-for="PersonalDataUse" required/>{{'PERSONAL_DATA_USE'|translate}}


        <input type="submit" name="login" class="login loginmodal-submit" value="{{'CREATE_ACC'|translate}}">




    </form>
</div>


